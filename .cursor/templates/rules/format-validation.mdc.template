---
description: {{DESCRIPTION}}
globs: {{GLOBS}}
alwaysApply: {{ALWAYS_APPLY}}
---

rule "{{RULE_NAME}}" {
  type: "{{RULE_TYPE}}"
  when: {{WHEN_CONDITION}}
  {{#if PATTERN}}
  block.text must_match: "{{PATTERN}}"
  {{/if}}
  {{#if NEXT_BLOCK_PATTERN}}
  next_block.must_match: "{{NEXT_BLOCK_PATTERN}}"
  {{/if}}
  {{#if NEXT_BLOCK_MUST_CONTAIN}}
  next_block.must_contain: "{{NEXT_BLOCK_MUST_CONTAIN}}"
  {{/if}}
  {{#if VALID_MESSAGE}}
  valid: "{{VALID_MESSAGE}}"
  {{/if}}
  {{#if ERROR_MESSAGE}}
  error: "{{ERROR_MESSAGE}}"
  {{/if}}
  {{#if WARNING_MESSAGE}}
  warn: "{{WARNING_MESSAGE}}"
  {{/if}}
}

